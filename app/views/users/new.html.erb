<% provide(:title,"Sign up") %>

<%= render 'layouts/top_content' %>
<div class="form_row">
 	<div class="col-md-8 col-md-offset-3
  ">
   	<%= form_for(@user,url: signup_path) do |f| %> 
     	
      <%= f.text_field :name , get_form_hash("form-control","Enter name") %>
     	<%= f.email_field :email, get_form_hash("form-control","Enter email") %>
     	<%= f.password_field :password , get_form_hash("form-control","Password")%>
     	<%= f.password_field :password_confirmation,
                             get_form_hash("form-control","Password Confirmation") %>

     	<%= f.submit "Sign up for Zone", class: "btn btn-primary" %>
   	<% end %>
 	</div>
</div>